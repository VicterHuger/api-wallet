{
  "name": "projeto13-mywallet-back",
  "version": "1.0.0",
  "description": "An api to an wallet management application. Generate token for sing-in/sign-up, use a Mongo database to store users data, encrypt password users, send and receive user data and verify authorization",
  "main": "./src/server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production_TLS_REJECT_UNAUTHORIZED=0 node ./src/server.js",
    "build": "NODE_ENV=production npx tsc --outDir dist",
    "dev": "NODE_ENV=dev nodemon -r dotenv/config ./src/server.js",
    "test": "NODE_ENV=test npx jest -i"
  },
  "keywords": [
    "api",
    "wallet",
    "token",
    "encrypt"
  ],
